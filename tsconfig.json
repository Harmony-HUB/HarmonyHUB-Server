{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*.ts",
    "src/bin/**/*.ts",
    "src/bin/www.ts",
    "src/types/global.d.ts"
  ],
  "exclude": ["node_modules"]
}
